<%- include ('../general/header') %>
<body>
    <%- include ('../general/navbar') %> 
    <div class="container">
        <h2 class="text-center">Usuario nuevo</h2>
        <form method="POST" action="/api/user/crear" id="form-create">
          <div class="form-group">  
            <label>Nombre y apellido</label>
            <input type="text" class="form-control" name="nombre">            
          </div>
          <div class="form-group">  
            <label for="legajo">Legajo</label>
            <input type="text" class="form-control"  name="legajo">          
          </div> 
          <div class="form-group">  
            <label for="email">Email</label>
            <input type="email" class="form-control" name="mail" placeholder="email@ejemplo.com">          
          </div> 
          
          <button type="submit" id="create" class="btn btn-secondary">Crear usuario</button>
        </form>
    </div>
</body>