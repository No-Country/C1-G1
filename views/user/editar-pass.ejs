<%- include('../general/header') %>
<%- include('../general/navbar') %>
<body>
    <main>
        <div class="container">
        <form action="/api/miperfil/password/cambiar/<%=id%>" method="POST">
            
        <h2 class="text-center">EDICIÓN DE CONTRASEÑA</h2>

        <div class="form-group">
            <label>Actual contraseña:</label>
            <input type="password" name="oldPassword" class="form-control margin-input" placeholder="Contraseña">
            <% if (locals.errors && errors.oldPassword) { %>
                <div class="alerta">
                <%= errors.oldPassword.msg %>
                </div>
            <% } %>
        </div>
    
        <div class="form-group">
            <label>Nueva contraseña:</label>
            <input type="password" name="newPassword" class="form-control margin-input" placeholder="Nueva Contraseña">
            <% if (locals.errors && errors.newPassword) { %>
                <div class="alerta">
                <%= errors.newPassword.msg %>
                </div>
            <% } %>
            <% if (locals.ok && ok.newPassword) { %>
                <div style="color: rgb(10, 105, 46);
                font-weight: bold;
                font-size: large;">
                <%= ok.newPassword.msg %>
                </div>
            <% } %>
        </div>

        <button type="submit" class="btn btn-secondary">Modificar contraseña</button>
        
    </form>
    <script src="/scripts/sweetalert2.min.js"></script>

<!--<script type="text/javascript" src="/scripts/session-start.js"></script>-->
</div>
  <%- include('../general/footer') %>

</main>
</body>
</html>