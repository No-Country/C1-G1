<%- include('./general/header') %>

  <body>
    <nav class="col navbar fixed-top navbar-expand-md navbar-light bg-light">
      <div style="flex: auto">
        <a href="./" class="navbar-text">
          <object type="image/svg+xml" data="/images/arrow.svg" style="height: 1.5rem; margin-right: 0.5rem;"></object>
        <span style="margin-top: -2px;"> Volver</span>
        </a>
      </div>
    </nav>
    <div class="container">
      <form class="form-user" method="POST" action="/login/auth">
        <h1 class="text-center">Ingresá a tu cuenta</h1>
        <div>
          <label for="legajo">Nº de legajo:</label>
          <input name="legajo" type="text" class="form-control" id="legajo" aria-describedby="emailHelp" required/>
          <% if (locals.errors && errors.legajo) { %>
            <div class="alert alert-danger">
              <%= errors.legajo.msg %>
            </div>
            <br>
            <% } %>
        </div>
        <div class="form-group">
          <label for="password">Contraseña:</label>
          <input name="password" type="password" class="form-control" id="password" required/>
        </div>
        <button class="button" type="submit">Ingresar</button>
      </form>
    </div>
    <script type="text/javascript" src="/scripts/session-start.js"></script>

    <%- include('./general/footer') %>
  </body>

  </html>