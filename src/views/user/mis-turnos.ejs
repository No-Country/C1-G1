<%- include ('../general/header') %>
<%- include ('../general/navbar') %>
<body>
    <main>
      <div class="container">
<%# ruta: reserva/user%>
      <h2 class="text-center fs-1">Mis reservas</h2>
      <div id="usuario" style="visibility: hidden"><%= id %></div>
      <br>
      <table class="table table-hover" id="lista-turnos">
          <thead>
            <tr class="encabezado">
              <th scope="col">Turno</th>
              <th scope="col">Fecha</th>
              <th scope="col">Puesto</th>
              <th scope="col">Piso</th>
              <th scope="col">Tipo de puesto</th>
              <th scope="col"> </th>
            </tr>
              <% for(var i=0; i<rows.length; i++) {%>
                <%var tipo = rows[i].escritorio_id, tpuesto = "";const f = rows[i].fecha; var options = { year: 'numeric', month: 'long', day: 'numeric' } %>
                  <%switch(rows[i].tipo) {case 1:tpuesto = "Escritorio individual";break;case 2:tpuesto = "Mesa grupal";break;case 3:tpuesto = "Sala de reuniones";break;} %>
                  <tr>
                  <% const nuevaf = f.toLocaleDateString("es-ES", options);%>
                  <td id="turno" style="min-width: 70px;" scope="col"><%= rows[i].id_turno %></td>
                  <td style="min-width: 200px;" scope="col"><%= nuevaf %></td>
                  <td style="min-width: 70px;" scope="col"><%= rows[i].escritorio_id %></td>
                  <td style="min-width: 70px;" scope="col"><%= rows[i].piso %></td>
                  <td style="min-width: 170px;" scope="col"><%= tpuesto %></td>
                  <td scope="col"> 
                  <div>
                    <a class="nav-link border-right" onclick="mensaje()">
                      <i class="fa-regular fa-trash-can" style="color: red;"></i>
                  </div>
                    
                  </td>
                  </tr>
              <% } %>
          </thead>
          <tbody>
          </tbody>
      </table> 
    </div>
    <script src="/scripts/sweetalert2.min.js"></script>
    <script src="/scripts/mensaje.js"></script>

  </main> 
  <%- include('../general/footer') %>  
</body>  

</html>

