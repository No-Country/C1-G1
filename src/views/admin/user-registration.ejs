<%- include('../general/header') %>
  <%- include('../general/navbar') %>

    <body>
      <main>
        <div class="container">
          <h2 class="text-center">Nuevo Usuario</h2>
          <form method="POST" action="/user/new" id="form-create">
            <div class="form-group">
              <label for="nombre">Nombre y apellido:</label>
              <input type="text"
                class="form-control margin-input <%= locals.errors && errors.nombre? 'is-invalid' : '' %>"
                value="<%= locals.oldData ? oldData.nombre : '' %>" name="nombre" id="nombre">
              <% if (locals.errors && errors.nombre) { %>
                <div class="invalid-feedback">
                  <%= errors.nombre.msg %>
                </div>
                <% } %>
            </div>
            <div class="form-group">
              <label for="legajo">Nº de Legajo:</label>
              <input type="text"
                class="form-control margin-input <%= locals.errors && errors.legajo? 'is-invalid' : '' %>"
                value="<%= locals.oldData ? oldData.legajo : '' %>" name="legajo" id="legajo">
              <% if (locals.errors && errors.legajo) { %>
                <div class="invalid-feedback">
                  <%= errors.legajo.msg %>
                </div>
                <% } %>
            </div>
            <div class="form-group">
              <label for="mail">Correo electrónico:</label>
              <input type="email"
                class="form-control margin-input <%= locals.errors && errors.mail? 'is-invalid' : '' %>"
                value="<%= locals.oldData ? oldData.mail : '' %>" name="mail" placeholder="email@ejemplo.com" id="mail">
              <% if (locals.errors && errors.mail) { %>
                <div class="invalid-feedback">
                  <%= errors.mail.msg %>
                </div>
                <% } %>
            </div>

            <button type="submit" id="create" class="btn btn-secondary">Crear usuario</button>
          </form>
        </div>
      </main>
      <%- include('../general/footer') %>
    </body>

    </html>